<style>
  #outbound-links ul {
    margin: 0;
    padding: 0;
    padding-left: 0.25em;
    padding-bottom: 0.5ex;
  }
  #outbound-links li {
    white-space: nowrap;
    display: block;
  }
</style>
<div id="outbound-links" class="noncontent"
  style="width: 19.5%; float:right; display: inline; position: relative; top: -1.5ex;">
  <ul>
    <% if (@node.flags & Node::DATA_IS_UNALTERABLE) == 0 %>
      <li>
        <%= link_to 'Edit this node', edit_node_path(@node),
                    :rel => 'nofollow' %><a
          href="<%= WontoMedia.popup_url_prefix -%>WmHelp:Popup/NodeEdit"
          class="iframeBox" tabindex="0" ><%= image_tag "help_icon.png",
            :alt=>"Help edit nodes", :class=>"image-in-text" -%></a>
      </li>

      <li>
        <% if @edge_list.empty? %>
          <%= link_to 'Delete this node', node_path(@node),
                      :rel => 'nofollow',
                      :confirm => 'Are you sure?', :method => :delete %><a
            href="<%= WontoMedia.popup_url_prefix -%>WmHelp:Popup/NodeDelete"
            class="iframeBox" tabindex="0" ><%= image_tag "help_icon.png",
              :alt=>"Help delete nodes", :class=>"image-in-text" -%></a>
        <% else %>
          <span class="inactiveLink">
            <%= link_to_function "Can't delete this node",
                                 "cantDeleteNode_Popup()" %><a
              href="<%= WontoMedia.popup_url_prefix -%>WmHelp:Popup/NodeCantDelete"
              class="iframeBox" tabindex="0" ><%= image_tag "help_icon.png",
                :alt=>"Help with can't-be-deleted nodes",
                :class=>"image-in-text" -%></a>
          </span>
        <% end %>
      </li>
    <% end %>

    <li>
      <%= link_to 'Show node list', nodes_path %><a
        href="<%= WontoMedia.popup_url_prefix -%>WmHelp:Popup/ShowNodes"
        class="iframeBox" tabindex="0" ><%= image_tag "help_icon.png",
          :alt=>"Help, node list", :class=>"image-in-text" -%></a>
    </li>

    <li>
      <%= link_to 'Add a new node', new_node_path,
                  :rel => 'nofollow' %><a
        href="<%= WontoMedia.popup_url_prefix -%>WmHelp:Popup/NodeAdd"
        class="iframeBox" tabindex="0" ><%= image_tag "help_icon.png",
          :alt=>"Help, create node", :class=>"image-in-text" -%></a>
    </li>

    <li>
      <%= link_to 'Show edge list', edges_path %><a
        href="<%= WontoMedia.popup_url_prefix -%>WmHelp:Popup/ShowEdges"
        class="iframeBox" tabindex="0" ><%= image_tag "help_icon.png",
          :alt=>"Help, edge list", :class=>"image-in-text" -%></a>
    </li>

    <li>
      <%= link_to 'Add a new edge', new_edge_path,
                  :rel => 'nofollow' %><a
        href="<%= WontoMedia.popup_url_prefix -%>WmHelp:Popup/EdgeAdd"
        class="iframeBox" tabindex="0" ><%= image_tag "help_icon.png",
          :alt=>"Help, create edge", :class=>"image-in-text" -%></a>
    </li>
  </ul>
</div>
