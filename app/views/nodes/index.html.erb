<%
  require Rails.root.join( 'lib', 'helpers', 'node_helper')
  @title_text = 'All Nodes'
 %>
<div class="headline">Listing all defined nodes</div>


<%= render :partial => "list_outbound_links",
           :locals => { :generating_index_page => true } %>

<table class="tight-table">
  <tr>  <th>Name</th><th>Title</th>                                  </tr>
  <tr>  <th colspan="2" style="padding-left: 2.2em;">Description</th>  </tr>

  <% @nodes.each do |node| %>
    <% content_tag :tr, :id => node.name do %>
      <td><%= h node.name %></td>
      <td><%= link_to "#{h node.title}", node_path(node) %></td>
      <td rowspan="2" class="dividerrow" style="font-size: 80%;">
        <% if (node.flags & Node::DATA_IS_UNALTERABLE) == 0 %>
          <%= link_to 'Edit', edit_node_path(node), :rel => 'nofollow' %>
          <% if @not_in_use_hash[node.id] %>
            <%= link_to 'Delete', node_path(node), :rel => 'nofollow',
                        :confirm => 'Are you sure?', :method => :delete %>
          <% end %>
        <% end %>
      </td>
    <% end %>
    <tr>
      <td colspan="2" class="dividerrow" style="padding-left: 2.2em;">
        <span style="font-size: 70%">
          <%=h NodeHelper::NODE_SUBTYPES_TO_HUMAN[node.sti_type] %>:</span>
        <%=h node.description %></td>
    </tr>
  <% end %>
</table>

<%= render :partial => "list_outbound_links",
           :locals => { :generating_index_page => true } %>
