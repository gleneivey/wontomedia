<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Description</th>
  </tr>

<% for node in @nodes %>
  <tr>
    <td><%=h node.name %></td>
    <td><%=h node.title %></td>
    <td><%=h node.description %></td>
    <td><%= link_to 'Show', node_path(node) %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node_path(node),
                    :confirm => 'Are you sure?',
                    :method => :delete %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New node', new_node_path %>
