<%
  require Rails.root.join( 'lib', 'helpers', 'node_helper')
  @title_text = 'All Nodes'
 %>
<div class="headline">Listing all defined nodes</div>


<%= render :partial => "list_outbound_links" %>
<br/>

<table>
  <tr>
    <th></th>
    <th>&nbsp;&nbsp;Name</th>
    <th>&nbsp;&nbsp;Title</th>
    <th>&nbsp;&nbsp;Description</th>
  </tr>

  <% @nodes.each do |node| %>
    <% content_tag :tr, :id => node.name do %>
      <td style="font-size: 70%">
        <%=h NodeHelper::NODE_SUBTYPES_TO_HUMAN[node.sti_type] %>:</td>
      <td><%= link_to "#{h node.name}", node_path(node) %></td>
      <td class="edgecolumn"><%=h node.title %></td>
      <td><%=h node.description %></td>
      <td style="font-size: 80%">
        <% if (node.flags & Node::DATA_IS_UNALTERABLE) == 0 %>
          <%= link_to 'Edit', edit_node_path(node) %>
          <% if @not_in_use_hash[node.id] %>
            <%= link_to 'Delete', node_path(node),
                        :confirm => 'Are you sure?', :method => :delete %>
          <% end %>
        <% end %>
      </td>
    <% end %>
  <% end %>
</table>

<%= render :partial => "list_outbound_links" %>
