<h1>Editing '<%= @node.title -%>' Node</h1>

<% form_for(@node, :url => node_path(@node)) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form_fields", :locals => { :f => f } %>
  <p><%= f.submit "Update" %></p>
<% end %>

<%= link_to 'Cancel, show node', node_path(@node) %> |
<%= link_to 'Cancel, show node list', nodes_path %>

<%= javascript_include_tag "modalbox" %>
<%= javascript_include_tag "forNodesForms" %>
<script type="text/javascript">
  $(controlNamePrefix + 'node_title').focus();
</script>
