<% content_for :head do %>
  <meta name="robots" content="noindex" />
  <meta name="googlebot" content="noindex" />
<% end

   @title_text = filter_parenthetical h @node.title

  # initialize array to define "Glossary Help" box of links:
  @glossary_help_entries = [
    [ 'Node', 'WmHelp:GlossaryAtoO#anchor_Node' ]
  ]
 %>

<div class="headline">Editing node<%=
  popup_help_icon "Help node edit", "WmHelp:Popup/HeaderNodeEdit" %>
</div>


<% form_for(@node, :url => node_path(@node)) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form_fields", :locals => { :f => f } %>
  <p><%= f.submit "Update", :tabindex => "10" %></p>
<% end %>

<div class="horizontal-link-list"><ul>
  <li><%= link_to 'Cancel,&nbsp;show&nbsp;node', node_path(@node),
                  :rel => 'nofollow' -%></li>
  <li><%= link_to 'Cancel,&nbsp;show&nbsp;node&nbsp;list', nodes_path,
                  :rel => 'nofollow' -%></li>
</ul></div>

<script type="text/javascript">
  creatingNewNode = false;
</script>
<%= javascript_include_tag "forNodesForms" %>
<script type="text/javascript">
  plumbEventHandlersToNodeCreationElements();
  $(controlNamePrefix + 'node_title').focus();
</script>
