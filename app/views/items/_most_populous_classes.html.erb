<style>
  #class-item-list {
    padding-left: 1.3em;
    font-size: 110%;
  }
  #class-item-list li {
    color: yellow;
    margin-bottom: 0.8ex;
  }
  #class-item-list li span {
    color: black;
  }
</style>

<h2 class="subheading">Most Used</h2>
<ul id="class-item-list"><%
  @class_list.each do |item| %>
    <li><span>
      <%= link_to "#{h filter_parenthetical item.title}",
            item_by_name_path(item.name) %>
    </span></li><%
  end %>
</ul>
