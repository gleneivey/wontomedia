<% @title_text = 'All Edges' %>
<div class="headline">Listing all defined
  edges<a href="<%= WontoMedia.help_url_prefix -%>WmHelp:Popup/LinkEdgesIndex"
     style="font-size: small;" target="_blank" tabindex="0" ><%=
    image_tag "help_icon.png", :alt=>"Help, edges list",
              :class=>"image-in-text" -%></a>
</div>


<p>
  <%= render :partial => "index_outbound_links" %>
</p>
<br/>

<table>
  <tr>
    <th>Subject</th>
    <th>Predicate</th>
    <th>Object</th>
  </tr>

  <% @edges.each do |edge| %>
    <% content_tag :tr, :id => edge.id do %>
      <td><%= link_to "#{h edge.subject.title}", node_path(edge.subject) %></td>
      <td>
        <%=   link_to "#{h edge.predicate.title}", node_path(edge.predicate) %>
      </td>
      <td><%= link_to "#{h edge.obj.title}", node_path(edge.obj) %></td>
      <td style="font-size: 80%">
        <span style="white-space: nowrap;"><%= link_to 'Show',
          edge_path(edge) %><a
            href="<%= WontoMedia.help_url_prefix -%>WmHelp:Popup/EdgeShow"
            target="_blank" tabindex="0" ><%=
              image_tag "help_icon.png",
                        :alt=>"Help edit nodes",
                        :class=>"image-in-text" -%></a></span>

        <% if (edge.flags & Edge::DATA_IS_UNALTERABLE) == 0 %>

          <span style="white-space: nowrap;"><%= link_to 'Edit&hellip;',
            edit_edge_path(edge), :rel => 'nofollow' %><a
            href="<%= WontoMedia.help_url_prefix -%>WmHelp:Popup/EdgeEdit"
            target="_blank" tabindex="0" ><%= image_tag "help_icon.png",
              :alt=>"Help edit nodes", :class=>"image-in-text" -%></a></span>
          <span style="white-space: nowrap;"><%= link_to 'Delete',
            edge, :rel => 'nofollow', :confirm => 'Are you sure?',
            :method => :delete %><a
              href="<%= WontoMedia.help_url_prefix -%>WmHelp:Popup/EdgeDelete"
              target="_blank" tabindex="0" ><%= image_tag "help_icon.png",
                :alt=>"Help delete nodes", :class=>"image-in-text"
          -%></a></span>
        <% end %>
      </td>
<!--
      <td><%= unless edge.edge_desc.nil?
                link_to "#{h edge.edge_desc.name}", node_path(edge.edge_desc)
             end %>
      </td>
  -->
    <% end %>
  <% end %>
</table>

<p>
  <%= render :partial => "index_outbound_links" %>
</p>

