<h1>Listing edges</h1>

<table>
  <tr>
    <th>Subject</th>
    <th></th>
    <th>Predicate</th>
    <th>Object</th>
  </tr>

<% @edges.each do |edge| %>
  <tr>
    <td><%=n = Node.find(edge.subject_id)
           link_to "#{h n.name}", node_path(n) %></td>
    <td style="font-size: 80%">(is [a|an|the])</td>
    <td><%=n = Node.find(edge.predicate_id)
           link_to "#{h n.name}", node_path(n) %></td>
    <td><%=n = Node.find(edge.obj_id)
           link_to "#{h n.name}", node_path(n) %></td>
    <td><%=if edge.edge_desc_id
             n = Node.find(edge.edge_desc_id)
             link_to "#{h n.name}", node_path(n)
           end %></td>
    <td><%=   link_to 'Edit', edit_edge_path(edge) %></td>
    <td><%=   link_to 'Destroy', edge, :confirm => 'Are you sure?',
	                               :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New edge', new_edge_path %>
