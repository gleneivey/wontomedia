<h1>Listing edges</h1>

<table>
  <tr>
    <th>Subject</th>
    <th></th>
    <th>Predicate</th>
    <th>Object</th>
  </tr>

<% @edges.each do |edge| %>
  <tr>
    <td><%=link_to "#{h edge.subject.name}", node_path(edge.subject) %></td>
    <td style="font-size: 80%">(is [a|an|the])</td>
    <td><%=link_to "#{h edge.predicate.name}", node_path(edge.predicate) %></td>
    <td><%=link_to "#{h edge.obj.name}", node_path(edge.obj) %></td>
    <td><%=unless edge.edge_desc.nil?
             link_to "#{h edge.edge_desc.name}", node_path(edge.edge_desc)
           end %></td>
    <td><%=   link_to 'Edit', edit_edge_path(edge) %></td>
    <td><%=   link_to 'Destroy', edge, :confirm => 'Are you sure?',
	                               :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New edge', new_edge_path %>
