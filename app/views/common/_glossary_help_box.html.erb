<% if defined? @glossary_help_entries %>
  <style>
    #block-glossary-help ul {
      padding: 0;
      margin: 0;
      margin-bottom: 0.5ex;
    }
    #block-glossary-help p {
      padding: 0;
      margin: 0;
      line-height: 85%;
    }
    #block-glossary-help li {
      margin-left: 1.5em;
    }
    #block-glossary-help li a:link,
    #block-glossary-help li a:active,
    #block-glossary-help li a:visited {
      text-decoration: none;
    }
  </style>
  <div id="block-glossary-help" class="box"
    style="width: 98%; text-align: left;">

    <p>
      <span style="font-size: 80%;">See the following</span>
      <a href="<%= WontoMedia.help_url_prefix -%>WmHelp:GlossaryAtoO"
         target="_blank">Glossary</a>
      <span style="font-size: 80%;">entries:</span>
    </p>

    <ul>
      <% @glossary_help_entries.each do |link| %>
        <li><a href="<%=
            WontoMedia.help_url_prefix + link[1]
          -%>" target="_blank"><%= link[0] -%></a></li>
      <% end %>
    </ul>
  </div>
<% end %>
