<% @display_unimplemented = false %>


<% require Rails.root.join( 'lib', 'helpers', 'node_helper') %>


#### the layout for the home page yields for five different pieces of content:
##     :content_full            (top, full-width area of center content column)
##     :content_lower_wide
##     :content_lower_narrow
##     :right_column
##     :left_column
##
## so this file contains a "content_for" block for each.


<% content_for :content_full do %>
  <%= render :partial => "home_introductory_text" %>
  <%= render :partial => "core_tasks" %>
<% end -%>


<% content_for :content_lower_wide do %>
  <%= render :partial => "content_examples" %>
<% end -%>
<% content_for :content_lower_narrow do %>
  <%= render :partial => "screen_select" %>
<% end -%>
<% content_for :content_bottom do %>
  <style>
      #content-bottom .outbound-links-list {
        padding-left: 0;
      }
      #content-bottom .outbound-links-list li {
        display: inline;
      }
      #content-bottom .outbound-links-list li + li {
        margin-left: 1.5em;
      }
  </style>
  <%= render :partial => "list_outbound_links" %>
<% end -%>

<% content_for :right_column do %>
  <div id="block-action-links" class="box">
    <style>
      #block-action-links .outbound-links-list {
        padding: 0; margin: 0; margin-bottom: 0.5ex;
      }
      #block-action-links .outbound-links-list li {
        margin-left: 1.5em;
      }
    </style>
    <%= render :partial => "list_outbound_links" %>
  </div>
<% if @display_unimplemented %>
  <div id="block-active" class="box">
    <p class="unimplemented">[area to highlight sections of the
      wontology that have recent/heavy activity]</p>
  </div>
  <div id="block-topics" class="box">
    <p class="unimplemented">[area to list all Topics in the
      wontology, sorted by size/activity]</p>
  </div>
<% end -%>
<% end -%>

<% content_for :left_column do %>
<% if @display_unimplemented %>
  <%= render :partial => "common/navigation_menu" %>
  <div id="block-announcements" class="box">
    <p class="unimplemented">[area for displaying announcements (new
      feature deployments, scheduled down-time, etc.) to users]</p>
  </div>
  <div id="block-personalization" class="box">
    <p class="unimplemented">[area for user personalization features,
      both information display and controls]</p>
  </div>
  <div id="block-featured" class="box">
    <p class="unimplemented">[area for links to other, external,
      "featured" wontologies/WontoMedia installations]</p>
  </div>
<% end -%>
<% end -%>
